# Kubernetes Environment Configuration for Belimang Application
# Copy this file to .env and update the values according to your environment

# Application Environment
ENV=production
GIN_MODE=release
HTTP_PORT=8080

# Database Configuration
DB_HOST=postgres-service
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=change-this-secure-password
DB_NAME=belimang
DB_SSLMODE=disable
DATABASE_URL=postgres://postgres:change-this-secure-password@postgres-service:5432/belimang?sslmode=disable

# Cache Configuration
CACHE_HOST=redis-service
CACHE_PORT=6379
CACHE_PASSWORD=
CACHE_DB=0
REDIS_ADDR=redis-service:6379

# Logger Configuration
LOG_LEVEL=info
LOG_TYPE=simple

# JWT Configuration
JWT_SECRET_KEY=change-this-jwt-secret-key-in-production-use-long-random-string
JWT_ISSUER=belimang-app

# Go Runtime Configuration
GOMAXPROCS=4
GOMEMLIMIT=1536MiB
GODEBUG=asyncpreemptoff=1
GOCACHE=/tmp/go-cache
GOTMPDIR=/tmp/go-tmp

# Docker Registry Configuration (for K8s deployment)
REGISTRY=docker.io
REGISTRY_USER=your-dockerhub-username
IMAGE_TAG=latest

# K3s Specific Configuration
K3S_NODE_IP=192.168.1.100
K3S_CLUSTER_CIDR=10.42.0.0/16
K3S_SERVICE_CIDR=10.43.0.0/16

# Storage Configuration
POSTGRES_STORAGE_SIZE=10Gi
REDIS_STORAGE_SIZE=5Gi
STORAGE_CLASS=local-path

# Resource Limits
POSTGRES_CPU_LIMIT=2
POSTGRES_MEMORY_LIMIT=2Gi
POSTGRES_CPU_REQUEST=1
POSTGRES_MEMORY_REQUEST=512Mi

REDIS_CPU_LIMIT=1
REDIS_MEMORY_LIMIT=768Mi
REDIS_CPU_REQUEST=500m
REDIS_MEMORY_REQUEST=256Mi

APP_CPU_LIMIT=4
APP_MEMORY_LIMIT=2Gi
APP_CPU_REQUEST=2
APP_MEMORY_REQUEST=512Mi
APP_REPLICAS=2